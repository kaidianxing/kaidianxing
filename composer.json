{
  "name": "kaidianxing/kaidianxing",
  "description": "基于Yii2+Vue2.0+uniapp研发，H5+小程序+公众号全渠道覆盖，功能完善开箱即用，框架成熟易扩展二开",
  "homepage": "https://www.kaidianxing.com",
  "type": "project",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "青岛开店星信息技术有限公司",
      "email": "4630532@qq.com"
    },
    {
      "name": "likexin",
      "email": "595959518@qq.com"
    }
  ],
  "keywords": [
    "开店",
    "分销商城",
    "O2O",
    "小程序商城",
    "二开"
  ],
  "support": {
    "forum": "https://q.kaidianxing.com",
    "wiki": "https://wiki.kaidianxing.com/"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "~7.4",
    "yiisoft/yii2": "^2.0",
    "yiisoft/yii2-redis": "^2.0",
    "yiisoft/yii2-queue": "^2.3",
    "yiisoft/yii2-swiftmailer": "^2.1",
    "yansongda/pay": "^2.10",
    "overtrue/wechat": "^4.5",
    "overtrue/easy-sms": "^2.1",
    "phpoffice/phpspreadsheet": "^1.22",
    "symfony/yaml": "^5.4",
    "endroid/qr-code": "^4.4",
    "symfony/var-dumper": "^5.4",
    "aliyuncs/oss-sdk-php": "^2.4",
    "qcloud/cos-sdk-v5": "^2.5",
    "qiniu/php-sdk": "^7.4",
    "moonpie/macro": "^1.0",
    "ext-json": "*",
    "ext-gd": "*",
    "ext-curl": "*",
    "ext-bcmath": "*",
    "ext-zip": "*",
    "ext-fileinfo": "*"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "^2.1",
    "yiisoft/yii2-gii": "^2.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.cn",
      "options": {
        "ssl": {
          "verify_peer": false
        }
      }
    }
  ],
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "easywechat-composer/easywechat-composer": true
    }
  }
}
